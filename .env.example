# Configurações do Chatbot Prolog

# ===== Semantic NLU Settings =====
# Ativa/desativa classificação semântica com sentence-transformers
USE_SEMANTIC_NLU=true

# Modelo sentence-transformers a ser usado
# Opções: 'paraphrase-multilingual-MiniLM-L12-v2' (rápido), 'paraphrase-multilingual-mpnet-base-v2' (preciso)
SEMANTIC_MODEL_NAME=paraphrase-multilingual-MiniLM-L12-v2

# Threshold de confiança para aceitar classificação semântica diretamente (0.0-1.0)
SEMANTIC_INTENT_THRESHOLD=0.75

# Threshold de confiança para extração semântica de entidades (0.0-1.0)
SEMANTIC_ENTITY_THRESHOLD=0.70

# Taxa de A/B testing: % de sessões que usam semantic (0-100)
# 0 = nenhuma sessão, 100 = todas as sessões
SEMANTIC_AB_TEST_RATE=100

# ===== Database Settings =====
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=moviedb

# ===== Redis Settings =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ===== API Settings =====
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ===== Development Settings =====
# Ativa modo debug (mais logs)
DEBUG=false

# Ativa hot reload para desenvolvimento
RELOAD=false
